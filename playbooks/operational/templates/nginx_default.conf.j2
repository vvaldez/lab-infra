server {
    listen	 80;
    server_name  guacwebserver;

    location /websocket-tunnel {
        proxy_http_version 1.1;    proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_pass "http://127.0.0.1:8080/guacamole/websocket-tunnel";
    }

    location / {
        proxy_pass http://127.0.0.1:8080/guacamole/;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Server-URL-Base "https://{{endpoint_domain}}/?token={TOKEN}&GUAC_DATA_SOURCE=jwt&GUAC_ID={GUAC_ID}&GUAC_TYPE=c&route=g{{id_from_host.stdout|int +1 }}";
    }
}
